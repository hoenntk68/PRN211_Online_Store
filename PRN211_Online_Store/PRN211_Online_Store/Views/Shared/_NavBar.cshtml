@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string username = Context.Session.GetString("username");
    string role = Context.Session.GetString("role");
    string avatar = Context.Session.GetString("avatar");
}
<link href="/css/NavBar.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<header class="header">
    <div class="home-icon">
        <a href="/Home/HomePage">
            <i class="fa-solid fa-house"></i>
        </a>
    </div>
    <div class="search-bar">
        <form asp-controller="Product" asp-action="Search" method="get">
            <input class="search-input"
                   type="text"
                   style="min-width: 300px"
                   name="toSearch"
                   placeholder="Enter your search" />
            <button class="search-button"
                    type="submit">
                <img src="https://w7.pngwing.com/pngs/582/430/png-transparent-search-magnifier-find-zoom-glass-seo-optimization-instagram-icon.png"
                     alt="Search Icon"
                     width="20"
                     height="20" />
                @* <i class="fa-solid fa-magnifying-glass"></i> *@
            </button>
        </form>
    </div>
    <div class="profile-section">
        <div class="profile-icon dropdown" style="margin-right: 50px">
            @if (username != null)
            {

                <img src="/img/@avatar"
                     alt="Profile Icon"
                     width="30"
                     height="30" />
            }
            else
            {
                <img src="https://cdn-icons-png.flaticon.com/512/6522/6522516.png"
                     alt="Profile Icon"
                     width="30"
                     height="30" />
            }
            <div class="dropdown-content">
                <a href="#">Add Product</a>
                <a href="#">Orders</a>
            </div>
        </div>
        <div class="login-button">
            @if (username == null)
            {
                <a href="/Authen/Login" >
                    Login
                </a>
            }
            else
            {
                <a href="/Authen/Logout" style="text-decoration: none">
                    Logout
                </a>
            }
        </div>

    </div>
</header>